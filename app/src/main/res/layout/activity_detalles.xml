<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/activity_detalles"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:paddingTop="0dp"
  android:paddingBottom="0dp"
  android:paddingLeft="0dp"
  android:paddingRight="0dp"
  android:background="@android:color/background_dark"
  tools:context="com.example.a14550390.eva2_practica1.Detalles">

  <ImageView
    android:id="@+id/imgDetalle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_above="@+id/lblNombre"
    android:layout_alignParentTop="true"
    android:adjustViewBounds="true"
    android:cropToPadding="false"
    android:scaleType="fitStart"
    app:srcCompat="@drawable/barrafina2x" />

  <TextView
    android:id="@+id/lblNombre"
    android:textStyle="normal|bold"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_above="@+id/lblDescripcionDet"
    android:layout_centerHorizontal="true"
    android:gravity="center"
    android:text="Nombre"
    android:textColor="@android:color/background_light"
    android:textSize="50sp" />

  <TextView
    android:id="@+id/lblDescripcionDet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_above="@+id/lblDireccion"
    android:gravity="center"
    android:text="TextView"
    android:textColor="@color/colorAccent"
    android:textSize="36sp" />
  <TextView
    android:id="@+id/lblDireccion"
    android:textStyle="bold"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_above="@+id/lblTelefono"
    android:gravity="center"
    android:text="Direccion"
    android:textColor="@android:color/holo_orange_light"
    android:textSize="30sp" />

  <TextView
    android:id="@+id/lblTelefono"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:gravity="center"
    android:onClick="dial"
    android:text="Telefono"
    android:textColor="@android:color/background_light"
    android:textSize="30sp" />
</RelativeLayout>
